<Window x:Class="Lesson7.BindingStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson7"
        mc:Ignorable="d"
        Title="BindingStudentWindow" Height="450" Width="800">
    <Grid x:Name="studentGrid">
        <TextBlock HorizontalAlignment="Left" Margin="78,132,0,0" TextWrapping="Wrap" Text="Student Name:" VerticalAlignment="Top"/>
        <TextBox x:Name="tbStudentName" HorizontalAlignment="Left" Height="23" Margin="78,174,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="pbUpdateName" Content="Update Name" HorizontalAlignment="Left" Margin="289,276,0,0" VerticalAlignment="Top" Width="90" Click="pbUpdateName_Click"/>

    </Grid>
</Window>
